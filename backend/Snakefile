        "data/processed/{period}/{filter}/wr_naive.parquet"
    log:
        "logs/{period}/{filter}/g_wr_estimated.log"
    shell:
        "Rscript {input[0]} {wildcards.period} {wildcards.filter} > {log} 2>&1"


